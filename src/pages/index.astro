---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';


const metadata = {
  title: 'my3.site - My free site',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Build your new website in 30 seconds. Completely free."
    actions={[
      {
        variant: 'primary',
        text: 'Get started',
        href: 'https://app.my3.site',
        icon: 'tabler:wand',
      },
      { text: 'See demo', href: 'https://demo.my3.site', target: '_blank', },
    ]}
  >
    <Fragment slot="title">
      Improve <span class="hidden sm:inline">the online presence of</span> your <span
        class="text-accent dark:text-white highlight">business</span> / <span class="text-primary dark:text-white highlight">personal brand</span>
       with a free website.
    </Fragment>

    <Fragment slot="subtitle">
      In 30 seconds or less.  <span class="font-semibold">For free.</span> 
    </Fragment>

    <Fragment slot="image">
     <img class="drop-shadow-2xl rounded-lg" src="https://share.hyperflash.uk/u/lHfVyU.jpg"></img>
    </Fragment>
  </Hero>



  <!-- Stats Widget ****************** -->

  <Stats
    title="It's 2024. There's no excuse to not have an online presence."
    subtitle="We give you a blazing fast, secure, FREE website, in 30 seconds or less."
    stats={[
      { title: 'ðŸ”’ HTTPS (SSL)', amount: 'FREE' },
      { title: '.my3.site subdomain', amount: 'FREE' },
      { title: 'Free storage', amount: '1GB' },
      { title: 'Free bandwidth (unmetered for now)', amount: '100GB' },
    ]}
  />


  <!-- Features2 Widget ************** -->

  <Features2
  title="What do you get?"
  subtitle="We're adding website templates that suit various industries and purposes such as business, portfolio, e-commerce, blog, etc."
  items={[
    {
      title: 'A blazing fast, SEO optimised blog',
      description:
        "Easily create, delete and modify pages and posts. Your content will be more likely to be indexed by search engines thanks to our built-in SEO optimizations.",
      icon: 'flat-color-icons:document',
    },
    {
      title: 'Free [name].my3.site subdomain',
      description:
        'Launch your website quickly with a free [name].my3.site subdomain, making it easy for your audience to find you online.',
      icon: 'flat-color-icons:template',
    },
    {
      title: 'Backup and export website',
      description:
        'Secure your data with automated backups and export your website easily for peace of mind and flexibility.',
      icon: 'flat-color-icons:voice-presentation',
    },
    {
      title: '1GB storage',
      description:
        'Store up to 1GB of data, ensuring you have enough space to host your website content and media.',
      icon: 'flat-color-icons:safe',
    },
    {
      title: '(Coming soon) Portfolio template',
      description:
        'Showcase your work professionally with our upcoming portfolio template, designed to highlight your skills and projects.',
      icon: 'flat-color-icons:panorama',
    },
    {
      title: '(Coming soon) Edit website with git',
      description:
        'Take control of your website\'s code and collaborate seamlessly with others using Git integration, coming soon.',
      icon: 'flat-color-icons:command-line',
    },
  ]}
/>


  <!-- Features Widget *************** -->

  <Features
    id="features"
     title="Completely free to get started"
    subtitle="No credit card or payment method required."
    columns={3}
    items={[
      {
        title: 'Create your website',
        description:
          'Give it a name, description and choose your subdomain.',
        icon: 'tabler:artboard',
      },
      {
        title: 'Create content',
        description: 'Add, remove and edit pages and posts easily.',
        icon: 'tabler:picture-in-picture',
      },
      {
        title: 'Relax',
        description:
          'Enjoy automatic backups, free hosting and a pleasant content management experienc.',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Fast Loading Times',
        description: 'Optimized for speed to ensure a smooth user experience and favorable search engine rankings.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Compatibility',
        description: 'The templates work seamlessly across various content management systems and website builders.',
        icon: 'tabler:plug-connected',
      },
    ]}
  />

  
  

 
</Layout>
